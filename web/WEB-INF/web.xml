<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin Pages</web-resource-name>
            <url-pattern>/users/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>AllUsers</web-resource-name>
            <url-pattern>/users/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>newJdbcRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/loginerror.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>ru.nikitainfo.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>ru.nikitainfo.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPrognosServlet</servlet-name>
        <servlet-class>ru.nikitainfo.AddPrognosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Order</servlet-name>
        <servlet-class>ru.nikitainfo.Order</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveCookieServlet</servlet-name>
        <servlet-class>ru.nikitainfo.SaveCookieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUserInSession</servlet-name>
        <servlet-class>ru.nikitainfo.AddUserInSession</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetUserServlet</servlet-name>
        <servlet-class>ru.nikitainfo.GetUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewMessageServlet</servlet-name>
        <servlet-class>ru.nikitainfo.NewMessageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BinomServlet</servlet-name>
        <servlet-class>ru.nikitainfo.BinomServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteMessageServlet</servlet-name>
        <servlet-class>ru.nikitainfo.DeleteMessageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveSessionAdmin</servlet-name>
        <servlet-class>ru.nikitainfo.SaveSessionAdmin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/RegistrationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPrognosServlet</servlet-name>
        <url-pattern>/AddPrognosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Order</servlet-name>
        <url-pattern>/Order</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveCookieServlet</servlet-name>
        <url-pattern>/SaveCookieServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUserInSession</servlet-name>
        <url-pattern>/AddUserInSession</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetUserServlet</servlet-name>
        <url-pattern>/GetUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewMessageServlet</servlet-name>
        <url-pattern>/NewMessageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BinomServlet</servlet-name>
        <url-pattern>/BinomServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteMessageServlet</servlet-name>
        <url-pattern>/DeleteMessageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveSessionAdmin</servlet-name>
        <url-pattern>/SaveSessionAdmin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
